<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/press"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        card_view:cardCornerRadius="8dip"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/baner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal"
                android:paddingBottom="12.0dip"
                android:paddingTop="12.0dip">

                <TextView
                    android:id="@+id/pregID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="44.0dip"
                    android:layout_marginStart="12.0dip"
                    android:paddingStart="6.0dip"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/iconD"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12.0dip"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/flecha_abajo" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acordion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.15"
                android:background="#ff000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/respID"
                    android:layout_width="match_parent"
                    android:layout_height="90.0dip"
                    android:background="#ffffffff"
                    android:paddingBottom="4.0dip"
                    android:paddingEnd="6.0dip"
                    android:paddingStart="8.0dip"
                    android:paddingTop="4.0dip" />

                <LinearLayout
                    android:id="@+id/pie"
                    android:layout_width="match_parent"
                    android:layout_height="45.0dip"
                    android:layout_alignBottom="@id/respID"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/color_faqbox"
                    android:orientation="vertical"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>